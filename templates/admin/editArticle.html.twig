{% extends 'layout.html.twig' %}

{% block javascripts %}
    <script src="{{ asset('JS/form.js') }} " type="text/javascript"></script>
{% endblock %}
{% block title %}  Edit Article - Admin{% endblock %}

    {% block nav %}
        {% include "inc/nav_admin.html.twig" %}
    {% endblock %}
    {% block main %}
        <h1> MODIFICATION DE L'ARTICLE : {{ article.Artname }}</h1>
        {{ form_start(editArticleForm) }}
        {{ form_row((editArticleForm.ArtName)) }}
    <div class="edit_cat" id="edit_cat">
        {{ form_row(editArticleForm.category, {'attr':{"onchange":"newArticleAccess(this.value)"}}) }}
    </div>
    <div class="edit_access" id="new_access">
        {{ form_row(editArticleForm.access) }}
    </div>
        {{ form_row(editArticleForm.thematic) }}
        <div class="edit_article_date">
            {{ form_row(editArticleForm.creationDate) }}
        <div class="end_date" id="end_date">
            {{ form_row(editArticleForm.expDate) }}
        </div>
        </div>

        {{ form_row(editArticleForm.description) }}
        {{ form_row(editArticleForm.ArtImg) }}
        {{ form_end(editArticleForm) }}


    {% endblock %}