<div class="block_most_read">
    <hr>
    <div class="container">
        <div class="row">
            <div class="col-1 d-flex align-self-center">
                <a class="btn btn-lg mb-3 mr-1 " href="#carouselExampleCaptions" role="button"
                   data-bs-slide="prev">
                    <i class="fa fa-chevron-left fa-3x"></i>
                </a>
            </div>
            <div class="col-10">
                <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="false">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <div class="row">
                                {% for mostRead in mostReads|slice(0, 4) %}
                                    <div class="col">
                                        <a href="{{ path('view_article', {"id" : mostRead.id }) }}">
                                            <div class="card " >
                                                <img src="{{ asset('uploads/images/'~ mostRead.artImg) }}"
                                                     class="d-block w-100"
                                                     alt="{{ mostRead.artName }}">
                                                <div class="card-body">
                                                    <h5>{{ mostRead.artName }}</h5>
                                                    <p> {{ mostRead.description | length > 50 ? mostRead.description|slice(0, 90) ~ '...' : mostRead.description }} </p>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>

                        <div class="carousel-item ">
                            <div class="row">

                                {% for mostRead in mostReads|slice(4, 8) %}
                                    <div class="col">
                                        <a href="{{ path('view_article', {"id" : mostRead.id }) }}">
                                            <div class="card">
                                                <img src="{{ asset('uploads/images/'~ mostRead.artImg) }}"
                                                     class="d-block w-100"
                                                     alt="{{ mostRead.artName }}">
                                                <div class="card-body">
                                                    <h5>{{ mostRead.artName }}</h5>
                                                    <p> {{ mostRead.description | length > 50 ? mostRead.description|slice(0, 80) ~ '...' : mostRead.description }} </p>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-1 d-flex align-self-center">
                    <a class="btn btn-lg  mb-3  " href="#carouselExampleCaptions" role="button" data-bs-slide="next">
                        <i class="fa fa-chevron-right fa-3x "></i>
                    </a>
            </div>
        </div>

    </div>
</div>

